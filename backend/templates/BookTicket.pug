doctype html
html(lang="vi")
  head
    meta(charset="UTF-8")
    title MEDPRO - Xác nhận Phiếu Khám Bệnh: #{ticket._id}
  body
    div(style="font: small/1.5 Arial,Helvetica,sans-serif; overflow: hidden;")
